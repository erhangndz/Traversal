
@{
    ViewData["Title"] = "Index3";
}



@section Scripts{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
   


    <script type="text/javascript">

        $(document).ready(() => {

            var connection = new signalR.HubConnectionBuilder().withUrl("http://localhost:32689/VisitorHub").build();

            $("#connectionStatus").text(connection.connectionState);

            connection.start().then(() => {
                $("#connectionStatus").text(connection.connectionState);
            }).catch((err) => { console.log(err) });
        })

    </script>
}

<h3>Ziyaretçi Grafik Sayfası</h3>
<br />
<div class="container">
    <br />
    <div class="alert alert-warning">
        Bağlantınızın Durumu: <b id="connectionStatus"></b>
    </div>
</div>