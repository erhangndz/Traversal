@using EntityLayer.Concrete;
@model Destination
<!doctype html>
<html lang="zxx">


<body>
    <!--header-->
    <!-- //header -->
    <!-- about breadcrumb -->
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Tur Detayları</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/Default/Index">Ana Sayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rehberin Yorumları </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!--/blog-->
    @Html.HiddenFor(x=>x.DestinationID)
    <div class="py-5 w3l-homeblock1 text-center">
        <div class="container mt-md-3">
            <h3 class="blog-desc-big text-center mb-4">
                @Html.DisplayFor(x=>x.City) Hakkında Bilmeniz Gerekenler
            </h3>
            <div class="blog-post-align">
                <div class="blog-post-img">
                    <a href="#"><img src="@Html.DisplayFor(x=>x.Guide.Image)" alt="" class="rounded-circle img-fluid" /></a>
                </div>
                <div class="blog-post-info">
                    <div class="author align-items-center mb-1">
                        <a href="#">@Html.DisplayFor(x=>x.Guide.Name)</a> | <a href="#url">Traversal</a>
                    </div>
                    <ul class="blog-meta">
                        <li class="meta-item blog-lesson">
                            <span class="meta-value"> @DateTime.Now.ToShortDateString() </span>
                        </li>
                        <li class="meta-item blog-students">
                            <span class="meta-value"> 6 dk. okuma </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <section class="blog-post-main w3l-homeblock1">
        <!--/blog-post-->
        <div class="blog-content-inf pb-5">
            <div class="container pb-lg-4">
                <div class="single-post-image">
                    <div class="post-content col-lg-12 justify-content-center">
                        <img src="@Html.DisplayFor(x=>x.CoverImage)" class="radius-image img-fluid mb-5" alt="" style="height:500px;width:1150px" />
                    </div>
                </div>
                <div class="single-post-content">
                    <p class="mb-4">
                        @Html.DisplayFor(x=>x.Details1)
                    </p>

                    <div class="sing-post-thumb mb-5 row pt-3">
                        <div class="col-sm-6">
                            <a href="#url"><img src="@Html.DisplayFor(x=>x.Image)" class="img-fluid radius-image" alt="" style="height:350px;width:400px"></a>
                        </div>
                        <div class="col-sm-6 mt-sm-0 mt-3">
                            <a href="#url"><img src="@Html.DisplayFor(x=>x.Image2)" class="img-fluid radius-image" alt="" style="height:350px;width:400px"></a>
                        </div>
                    </div>

                    <p class="mb-4">
                        @Html.DisplayFor(x=>x.Details2)
                    </p>





                    <div class="d-grid left-right mt-5 pb-md-5">
                        <div class="buttons-singles tags">
                            <h4>Etiketler :</h4>
                            <a href="#blog-tag">Seyahat</a>
                            <a href="#blog-tag">Kültür</a>
                            <a href="#blog-tag">Otel</a>
                            <a href="#blog-tag">Yemek</a>
                        </div>
                        <div class="buttons-singles">
                            <h4>Paylaş :</h4>
                            <a href="#blog-share"><span class="fa fa-facebook" aria-hidden="true"></span></a>
                            <a href="#blog-share"><span class="fa fa-twitter" aria-hidden="true"></span></a>
                            <a href="#blog-share"><span class="fa fa-google-plus" aria-hidden="true"></span></a>
                            <a href="#blog-share"><span class="fa fa-pinterest-p" aria-hidden="true"></span></a>
                        </div>
                    </div>

                    <!--//author-card-->
                    @await Component.InvokeAsync("_TourGuidesDetails", new { id= ViewBag.Id})
                    <!--//author-card-->
                    @await Component.InvokeAsync("_CommentList" , new { id= ViewBag.Id})

                    @await Html.PartialAsync("~/Views/Destination/AddComment.cshtml",new {id=ViewBag.Id})
                </div>
            </div>
            <!--//blog-post-->
        </div>
    </section>





</body>

</html>