@using EntityLayer.Concrete;
@model List<Comment>

<div class="comments mt-5">
  
    
    <h4 class="side-title ">Yorumlar (@ViewBag.commentcount)</h4>
    @foreach (var item in Model)
    {
       

    <div class="media mt-4">
        <div class="img-circle">
            <img src="@item.Image" class="img-fluid" alt="...">
        </div>
        <div class="media-body">

            <ul class="time-rply mb-2">
                <li>
                    <a href="#URL" class="name mt-0 mb-2 d-block"> @item.NameSurname</a>
                    @item.CommentDate.ToShortDateString()

                </li>
                <li class="reply-last">
                    <a href="#reply" class="reply">
                        Cevapla
                    </a>
                </li>
            </ul>
            <p>
                @item.Content
            </p>
        </div>
    </div>
    }

</div>