@using EntityLayer.Concrete;
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3>Referanslar </h3>

<br />
@{
    int count = 0;
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Yorum</th>
       

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.Image" style="height:75px;width:75px;border-radius:50%"  />  @item.Name</td>
            <td>@item.Comment</td>
           

            <td>
                <i type="button"
                   id="btnactions"
                   data-bs-toggle="dropdown"
                   aria-haspopup="true"
                   aria-expanded="false">
                    <i class="bx bx-dots-vertical-rounded"></i>
                </i>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="btnactions">
                    <a class="dropdown-item btn btn-outline-danger" asp-action="DeleteTestimonial" asp-route-id="@item.TestimonialID"><i class='bx bxs-trash-alt'></i>Sil </a>
                    <a asp-action="UpdateTestimonial" asp-route-id="@item.TestimonialID" class="dropdown-item btn btn-outline-primary"><i class='bx bxs-edit-alt'></i>Düzenle</a>
                   

                </div>
            </td>




        </tr>
    }
</table>
<br />
<a href="/Admin/Testimonial/AddTestimonial" class="btn btn-outline-dark"><i class='bx bxs-plus-circle'></i>Yeni Referans Ekle</a>
