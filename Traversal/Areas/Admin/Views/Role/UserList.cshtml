@using EntityLayer.Concrete;
@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h3>Rol Listesi</h3>
@{
    int count = 0;
}
<br />
@if (Model.Any())
{

    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kullanıcı Adı</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            count++;

            <tr>
                <td>@count</td>
                <td>@item.UserName</td>
                <td>
                    <i type="button"
                       id="btnactions"
                       data-bs-toggle="dropdown"
                       aria-haspopup="true"
                       aria-expanded="false">
                        <i class="bx bx-dots-vertical-rounded"></i>
                    </i>
                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="btnactions">

                        <a asp-action="AssignRole" asp-route-id="@item.Id" class="dropdown-item btn btn-outline-primary"><i class='bx bxs-user-pin'></i>Rol Ata</a>


                    </div>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p class="alert alert-warning">Herhangi Bir Kullanıcı Bulunamadı</p>
}

