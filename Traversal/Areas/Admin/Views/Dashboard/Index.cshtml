@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            @await Component.InvokeAsync("_DashboardBanner")
            @await Component.InvokeAsync("_DashboardRightSideCharts")

            <!-- Total Revenue -->
            @await Component.InvokeAsync("_DashboardTotalRevenue")
            <!--/ Total Revenue -->
            @await Component.InvokeAsync("_DashboardRightCharts2")
        </div>
        <div class="row">
            <div class="col-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <img src="~/sneat-1.0.0/assets/img/icons/unicons/cc-primary.png" alt="Credit Card" class="rounded" />
                            </div>
                            <div class="dropdown">
                                <button class="btn p-0"
                                        type="button"
                                        id="cardOpt4"
                                        data-bs-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt4">
                                    <a class="dropdown-item" href="javascript:void(0);">Detaylar</a>
                                    <a class="dropdown-item" href="javascript:void(0);">Sil</a>
                                </div>
                            </div>
                        </div>
                        <span class="d-block mb-1">Ödemeler</span>
                        <h3 class="card-title text-nowrap mb-2">₺ 2,456</h3>
                        <small class="text-danger fw-semibold"><i class="bx bx-down-arrow-alt"></i> -14.82%</small>
                    </div>
                </div>
            </div>

            <div class="col-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <img src="~/sneat-1.0.0/assets/img/icons/unicons/cc-primary.png" alt="Credit Card" class="rounded" />
                            </div>
                            <div class="dropdown">
                                <button class="btn p-0"
                                        type="button"
                                        id="cardOpt1"
                                        data-bs-toggle="dropdown"
                                        aria-haspopup="true"
                                        aria-expanded="false">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="cardOpt1">
                                    <a class="dropdown-item" href="javascript:void(0);">Detaylar</a>
                                    <a class="dropdown-item" href="javascript:void(0);">Sil</a>
                                </div>
                            </div>
                        </div>
                        <span class="fw-semibold d-block mb-1">Gelirler</span>
                        <h3 class="card-title mb-2"> ₺ 14,857</h3>
                        <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> +28.14%</small>
                    </div>
                </div>
            </div>
       
        </div>
    </div>

</div>


<!-- </div>
<div class="row"> -->


<div class="row">
    <!-- Destination Statistics -->
    @await Component.InvokeAsync("_DestinationStatistics")
    <!--/ Destination Statistics -->
    <!-- Expense Overview -->
    @await Component.InvokeAsync("_DestinationStatistics2")
    <!--/ Expense Overview -->
    <!-- Transactions -->
    @await Component.InvokeAsync("_DashboardTransaction")
    <!--/ Transactions -->
</div>

<!-- / Content -->


<div class="content-backdrop fade"></div>



